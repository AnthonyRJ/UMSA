<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Login_and_Registration.com.example.Accueil.AccueilActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background"
    >

    <TextView
        android:id="@+id/textView_bienvenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/bienvenue"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/listeLab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Liste des applications"
        android:textSize="20sp" />

    <ScrollView
        android:id="@+id/scrollView_app"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="5dp"
        >


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/moreLab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/pinkBackground"
        android:text=" ... plus d'applications" />

    <Button
        android:id="@+id/button_createApp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="90dp"
        android:text="@string/addNewAppInDatabase"
        android:background="@drawable/button"
        android:textSize="15sp" />

    <Button
        android:id="@+id/button_loggout"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:text="@string/logout"
        android:background="@drawable/button"
        android:textSize="15sp" />


</LinearLayout>
