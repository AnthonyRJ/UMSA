<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Login_and_Registration.RegistrationActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/purpleColor">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/icone"/>

    <EditText
        android:id="@+id/editText_usernameRegister"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:hint="@string/username"
        android:background="#ffffff"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editText_passwordRegister"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:hint="@string/password"
        android:background="#ffffff"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editText_confirmPassword"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:hint="@string/confirmPassword"
        android:background="#ffffff"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button_register"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="@string/register"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

        <TextView
            android:id="@+id/textView_login"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="@string/already_registered"/>

</LinearLayout>
